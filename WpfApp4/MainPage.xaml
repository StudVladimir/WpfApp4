<Page x:Class="WpfApp4.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Клиенты" Name="BtnClient" Click="BtnClient_click" VerticalAlignment="Top"></Button>
            <Button Content="Автомобили" Name="BtnAuto" Click="BtnAuto_click" VerticalAlignment="Top"></Button>
            <Button Content="Тест Драйв" Name="BtnTestDrive" Click="BtnTestDrive_click" VerticalAlignment="Top"></Button>
            <Button Content="Скрвис" Name="BtnService" Click="BtnService_click" VerticalAlignment="Top"></Button>
            <Button Content="Модели авто" Name="BtnModels" Click="BtnModels_click" VerticalAlignment="Top"></Button>
        </StackPanel>
        

    </Grid>
</Page>
